{
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "build:ts": "tsc",
    "copydb:linux": "cp -r ./src/db ./dist/db",
    "copydb:win": "xcopy \"src\\db\" \"dist\\db\" /E /I /Y",
    "build:win": "npm run build:ts && npm run copydb:win",
    "build:linux": "npm run build:ts && npm run copydb:linux",
    "start": "node ./dist/index.js",
    "dev": "nodemon ./src/index.ts"
  }
}
